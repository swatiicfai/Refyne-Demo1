{
  "manifest_version": 3,
  "name": "Refyne Summarize & Speak",
  "version": "1.1",
  "description": "Summarize and speak webpage content with built-in AI.",
  "permissions": [
    "activeTab",
    "scripting",
    "tts",
    "storage"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": "icons/pen.png"
  },
  "icons": {
    "128": "icons/pen.png"
  },
  "host_permissions": [
    "https://api.openai.com/"
  ]
}
