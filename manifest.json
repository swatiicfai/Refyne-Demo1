{
  "manifest_version": 3,
  "name": "AI Summarizer",
  "version": "1.0",
  "description": "Summarize content using the OpenAI API.",

  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },

  "action": {
    "default_popup": "popup.html",
    "default_icon": "icons/icon48.png",
    "default_title": "AI Summarizer"
  },

  "permissions": [
    "activeTab",
    "scripting",
    "storage",
    "tts"
  ],

  "host_permissions": [
    "https://api.openai.com/"
  ],

  "options_page": "options.html"
}
